              primeiraParte0:='000Mega';
              //timer1.Enabled:=false;
          end;
        end
      else
        begin
          if ((length(label9.text))=0) then
            begin
              primeiraParte0:=label8.text+'';
        //timer1.Enabled:=false;
            end;
          if ((length(label9.text))=1) then
          begin
              primeiraParte0:=label8.text+'0';
              //timer1.Enabled:=false;
          end;
          if ((length(label9.text))=2) then
