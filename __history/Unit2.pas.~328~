      begin
        label9.Text:='Mega';
   end; }
   {else if label9.Text='0000' then
      begin
        label9.Text:='Kilo'
   end
   else if label9.Text='00000' then
      begin
        label9.Text:='Mega';
   end
   else if label9.Text='0000000' then
      begin
